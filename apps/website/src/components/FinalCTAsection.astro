
---
interface Props {
	headline: string;
}

const {headline} = Astro.props;

---
<section>
  <h4>{headline}</h4>
  <form action="https://proem.ai">
    <button id="myBtn" type="submit">Try Proem Beta</button>
</form>
</section>

<style lang="scss">
	@import "../variables/global.scss";

	/* Style the button used to pause/play the video */
	#myBtn {
		font-size: 18px;
		padding: 10px 45px;
		border: none;
		background: #fff;
		color: #000;
		cursor: pointer;
		border-radius: 12px;
	}

	#myBtn:hover {
		background: #ddd;
		color: #000;
	}
	#myBtn:focus {
		background: #888;
		color: #000;
	}

  section{
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    margin-top: 94px;
    margin-bottom: 140px;
    padding: 24px;
  }

  h4{
    font-size: $text-size-huge;
    margin: 0 0 40px 0;
    font-weight:400;
  }

  @media only screen and (max-width: 900px) {
  
  h4{
    font-size: $text-size-large;
    line-height: 56px;
    margin-bottom: 32px;
  }

}
</style>
