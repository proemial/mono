---
interface Props {
	headline: string;
}

const {headline} = Astro.props;

import EmailCapture from './EmailCapture.astro';
---

<section>
  <h4>{headline}</h4>
  <EmailCapture title="Join the mailinglist"></EmailCapture>

</section>
<style lang="scss">
	@import "../variables/global.scss";

  section{
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    margin-top: 94px;
    margin-bottom: 94px;
    padding: 24px;
  }

  h4{
    font-size: $text-size-huge;
    margin: 0;
    font-weight:400;
  }

  @media only screen and (max-width: 900px) {
  


  h4{
    font-size: $text-size-large;
    line-height: 56px;
    margin-bottom: 32px;
  }

}
</style>
