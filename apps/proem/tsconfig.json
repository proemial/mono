{
  "extends": "@proemial/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/database/**/*.ts",
    ".next/types/**/*.ts",
    "../../packages/events/inngest/client.ts",
    "../../packages/events/inngest/hello-world.ts"
  ],
  "exclude": ["node_modules"]
}
