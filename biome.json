{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": ["node_modules/*", "*.config.*", "tsconfig.json", ".turbo"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"useNamespaceKeyword": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useValidAriaRole": "off",
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off"
			},
			"style": {
				"useImportType": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			}
		},
		"ignore": [".next", ".vercel", ".turbo", "node_modules"]
	}
}
