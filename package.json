		"test:watch": "turbo run test:watch"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@vitest/coverage-v8": "^1.5.0",
		"turbo": "^1.13.2",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.5.0"
	},
	"packageManager": "pnpm@8.9.0",
	"engines": {
		"node": ">=20.0.0"
	},
	"pnpm": {
		"overrides": {
			"@langchain/core": "0.1.46",
			"drizzle-orm": "0.30.7",
			"react": "^18"
		}
	}
}
