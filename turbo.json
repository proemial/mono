{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"globalEnv": [
		"INNGEST_EVENT_KEY",
		"INNGEST_SIGNING_KEY",
		"NEXT_PUBLIC_VERCEL_URL",
		"OPENAI_API_KEY_TEST",
		"OPENAI_API_KEY",
		"OPENALEX_API_KEY",
		"RATE_LIMITER_ENDPOINT",
		"RATE_LIMITER_PASSWORD",
		"REDIS_PAPERS_TOKEN",
		"REDIS_PAPERS_URL",
		"REDIS_PAPERS_NEW_TOKEN",
		"REDIS_PAPERS_NEW_URL",
		"QDRANT_API_KEY",
		"QDRANT_URL",
		"SCRAPFLY_API_KEY",
		"ENABLE_EXPERIMENTAL_COREPACK"
	],
	"tasks": {
		"checkly": {},
		"test": {},
		"test:watch": {
			"cache": false
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}